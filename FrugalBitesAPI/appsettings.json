{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=frugalbites.db"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/frugalbites-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  },
  "JwtSettings": {
    "Secret": "DEVELOPMENT_ONLY_CHANGE_THIS_IN_PRODUCTION_USE_JWT_SECRET_ENV_VAR",
    "Issuer": "FrugalBites",
    "Audience": "FrugalBitesApp"
  },
  "Stripe": {
    "SecretKey": "sk_test_your_stripe_secret_key_here",
    "PublishableKey": "pk_test_your_stripe_publishable_key_here",
    "WebhookSecret": "whsec_your_webhook_secret_here"
  },
  "SendGrid": {
    "ApiKey": "SG.your_sendgrid_api_key_here",
    "FromEmail": "noreply@frugalbites.com",
    "FromName": "FrugalBites"
  },
  "QRCode": {
    "SecretKey": "FrugalBites_QR_Secret_2026_Change_In_Production"
  },
  "ImageUpload": {
    "BaseUrl": "http://localhost:3000/uploads",
    "MaxFileSizeMB": 5
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1s",
        "Limit": 10
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "post:/api/auth/*",
        "Period": "1m",
        "Limit": 10
      },
      {
        "Endpoint": "post:/api/auth/login",
        "Period": "15m",
        "Limit": 5
      }
    ]
  },
  "Cors": {
    "AllowedOrigins": [
      "https://frugalbites.com",
      "https://app.frugalbites.com"
    ]
  },
  "AllowedHosts": "*"
}
